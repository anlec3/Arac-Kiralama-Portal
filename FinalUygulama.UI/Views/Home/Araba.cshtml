@{
    ViewData["Title"] = "Index";
}

<div class="container mt-3">
    <h2>Arabalar</h2>
    <p>Mevcut Araçlar:</p>
    <div class="card" style="width:400px">
        <img class="card-img-top" src="" alt="Card image" style="width:100%">
        <div class="card-body">
            <h4 class="card-title">Marka</h4>
            <p class="card-text">Model</p>
            <a href="#" class="btn btn-primary">Kirala</a>
        </div>
    </div>

@section Scripts {
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {
            var token = localStorage.getItem("token");
            if (token == "" || token == null) {
                location.href = "/Home/Login";
                return false;
            }

            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
            GetArabaList();



            $("#tbArabaList tbody").sortable({
                placeholder: "bg-secodary",
                axis: "y",
                handle: '.move',
                cancel: '',
                update: function (event, ui) {
                    var ids = new Array();

                    $("#tbArabaList tbody tr").each(function () {
                        ids.push($(this).attr("id"));

                    });
                    ArabaSort(ids);
                }
            });

            function ArabaSort(ids) {

                $.ajax({
                    url: ApiBaseUrl + "Araba/ArabaOrderAjax",
                    type: "POST",
                    contentType: "application/json",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    data: JSON.stringify(ids),
                    success: function () {
                        GetArabaList();
                    },
                    error: function () { }
                });

            }

            $("#btnSave").click(function () {
                var marka = $("#txtMarka").val();
                var model = $("#txtModel").val();
                var id = $("#txtId").val();

                if (marka == "" || model == "") {
                    $("#divResult")
                        .show()
                        .removeClass()
                        .addClass("alert alert-danger")
                        .html("Tüm Alanları Doldurunuz!")
                        .fadeOut(5000);
                    return false;
                }
                var araba = new Object();
                araba.Marka = marka;
                araba.Model = model;
                araba.Id = id;
                var ajaxMetod = "";
                if (id == 0) {
                    ajaxMetod = "POST";

                }
                else {
                    ajaxMetod = "PUT";
                }
                $.ajax({
                    url: ApiBaseUrl + "Araba",
                    method: ajaxMetod,
                    data: JSON.stringify(araba),
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        if (data.status) {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-success")
                                .html(data.message)
                                .fadeOut(5000);
                            GetArabaList();
                        } else {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(data.message)
                                .fadeOut(5000);
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });

            });




            function GetArabaList() {
                $.ajax({
                    url: ApiBaseUrl + "Araba",
                    method: "GET",
                    contentType: "application/json",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        ArabaDataToTable(data);
                    },
                    error: function () { }
                });
            }

            function ArabaDataToTable(data) {
                $("#txtId").val("0");
                $("#btnDelete").hide();
                var tr = "";
                $.each(data, function (i, item) {
                    var bg = "";
                    if (item.score < 50) {
                        bg = "danger";
                    } else if (item.score >= 50 && item.score < 70) {
                        bg = "info";
                    } else {
                        bg = "success";
                    }
                    tr += `<tr id="${(item.id)}">
                                            <td>${(i + 1)}</td>
                                            <td>${item.marka}</td>
                                                   <td> <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="height: 30px">
                                                                                                                                                          <div class="progress-bar bg-${bg}" style="width: ${item.score}%">% ${item.score}</div>
                                                                                </div></td>
                                           <td><a href="#" class="btn btn-primary btn-circle move" title="Taşı">
                                               <i class="fas fa-arrows"></i>
                                               </a>                                                                                             <a href="/Home/ArabaSteps/${item.id}" class="btn btn-primary btn-circle" title="Detay"> <i class="fas fa-search"></i>
                                                </a>
                                               <a href="#" class="btn btn-primary btn-circle edit" title="Düzenle Sil">
                                               <i class="fas fa-pencil"></i>
                                              </a>
                                                </td>
                                              </tr>`;
                });
                $("#tbArabaList tbody").empty();
                $("#tbArabaList tbody").append(tr);
            }



            $(document).on("click", ".edit", function () {
                var id = $(this).closest("tr").attr("id");
                $("#txtId").val(id);
                $("#btnDelete").show();
                $.ajax({
                    url: ApiBaseUrl + "Araba/" + id,
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        $("#txtMarka").val(data.marka);
                        $("#txtModel").val(data.model);
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });

            });

            $("#btnCancel").click(function () {
                $("#txtMarka").val("");
                $("#txtModel").val("");
                $("#txtId").val("0");
                $("#btnDelete").hide();
            });

            $("#btnDelete").click(function () {
                var id = $("#txtId").val();
                $.ajax({
                    url: ApiBaseUrl + "Araba/" + id,
                    method: "DELETE",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        if (data.status) {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-success")
                                .html(data.message)
                                .fadeOut(5000);
                            GetArabaList();
                        } else {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(data.message)
                                .fadeOut(5000);
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });
            });

        });
    </script>
}
